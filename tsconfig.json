{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "outDir": ".build",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "target": "es6",
    "downlevelIteration": true,
    "declaration": true,

    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": true,
    "strictNullChecks": true
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "*/node_modules"
  ]
}
